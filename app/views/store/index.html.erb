<div pjax-data-container>
  <div class="container"  style="display:inline;">
    <ul class="thumbnails">
      <% @products.each do |product| %>
        <li class="span3">
          <div class="view view-third">
            <img src="http://dl.dropbox.com/u/14840749/<%= product.id %>.jpg"height="200" width="260" alt="product">
            <div class="mask">
              <h2><%= product.title %></h2>
              <h1><%= button_to 'Add to Cart', line_items_path(product_id: product),class: "btn btn-primary", remote: true %>
                </h1></div>
            </div>

          </li>

          <div class="modal hide" id="myModal_<%= product.id %>">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">Ã—</button>
              <h3><%= product.title %></h3>
            </div>
            <div class="modal-body">
              <p>
                <%= sanitize(product.description) %>
              </p>
            </div>
            <div class="modal-footer">
              <a href="#" class="btn btn-primary" data-dismiss="modal">Close</a>
            </div>
          </div>

        <% end %>
      </ul>
    </div>

  </div>


